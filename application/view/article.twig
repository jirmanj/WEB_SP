{% extends 'base.twig' %}

{% block information %}
    <h2>Publikovaný článek konferenčního systému</h2>
    <p class="info_up">Nyní se nacházíte v <strong>{{ array.nazev }}</strong>.</p>
{% endblock %}


{% block content %}
    <div class="container">
        <div class="row">
             <h3>{{ array.nazev }}</h3>
            <p> {{ array.text }}</p>
            <p><strong class="info_clanku">Autor: </strong>{{ array.autor }}</p>
            <p><strong class="info_clanku">Hodnocení: </strong>{{ array.posouzeno }}</p>
        </div>
    </div>
{% endblock %}